<h1>Plans</h1>

<div class='row'>
  <table class='col-md-12 plans-table'>
    <% @plans.each do |plan| %>
      <td class='row plan'>
        <h2><%= plan.name %></h2>
        <div class='description'><%= plan.description %></div>
        <div class='price'><%= number_to_currency(plan.amount) %></div>
        <div class='purchase'>
          <%= link_to "Purchase", checkout_plan_path(plan),
              class: 'btn btn-success btn-purchase' %>
        </div>
      </td>
    <% end %>
  </table>
</div>
